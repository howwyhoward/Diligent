{
  "name": "cse186-assignment8-backend",
  "version": "3.0.0",
  "description": "CSE186 Assignment 8 - Backend",
  "author": "David Harrison <dcharris@ucsc.edu>",
  "license": "UNLICENSED",
  "repository": "none",
  "devDependencies": {
    "eslint": "8.57.0",
    "eslint-config-google": "*",
    "jest": "*",
    "nodemon": "*",
    "supertest": "*"
  },
  "dependencies": {
    "bcrypt": "*",
    "bcryptjs": "^2.4.3",
    "body-parser": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "express-openapi-validator": "*",
    "express-session": "*",
    "js-yaml": "*",
    "jsonwebtoken": "*",
    "pg": "*",
    "swagger-ui-express": "*"
  },
  "jest": {
    "testTimeout": 60000,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/server.js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 15
    },
    "rules": {
      "indent": [
        "warn",
        2
      ]
    },
    "ignorePatterns": [
      "coverage/**"
    ]
  },
  "scripts": {
    "start": "nodemon src/server.js",
    "test": "jest --testTimeout=10000 --runInBand --coverage --verbose --forceExit --detectOpenHandles",
    "lint": "eslint . --no-inline-config --max-warnings 0"
  }
}
